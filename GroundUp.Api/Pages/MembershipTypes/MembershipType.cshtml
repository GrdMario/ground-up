@page
@model GroundUp.Api.Pages.MembershipTypes.MembershipTypeModel
@{
}


<div style="max-width: 800px; margin: auto">
    <form method="POST" asp-page-handler="Update">

        <input asp-for="UpdateMembershipTypeViewModel.Id" hidden />
        <div class="card">
            <div class="py-4 border-bottom">
                <h4 class="text-center">Add new membership type</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="p-4 border-bottom">

                <div class="row mb-2 mt-2">
                    <div class="form-group col-md-10">
                        <label asp-for="UpdateMembershipTypeViewModel.Name" class="mb-2">Name</label>
                        <input asp-for="UpdateMembershipTypeViewModel.Name" type="text" class="form-control" placeholder="Name">
                        <small class="form-text text-muted">Enter membership type name.</small>
                        <div>
                            <span asp-validation-for="UpdateMembershipTypeViewModel.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="UpdateMembershipTypeViewModel.Color" class="mb-2">Color</label>
                        <input asp-for="UpdateMembershipTypeViewModel.Color" type="Color" class="form-control" placeholder="Color">
                        <div>
                            <span asp-validation-for="UpdateMembershipTypeViewModel.Color" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="p-4">
                <div class="row">
                    <div class="col-md-2">
                        <a class="btn btn-outline-danger w-100" asp-page="/MembershipTypes/Index">Back</a>
                    </div>
                    <div class="col-md-2 offset-8">
                        <button class="btn btn-outline-secondary w-100"><i class="fa-solid fa-floppy-disk"></i></button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>